<h3>Food Service Aid</h3>

<%= form_for @camp_application, url: wizard_path, method: :put do |f| %>
  <div class="field">
    <p>Please let us know if you want to avail our food service during the camp.</p>
    <p>
      <%= radio_button_tag(:avail_food_service, true) %>
      <%= label_tag "Yes" %>
      <%= radio_button_tag(:avail_food_service, false) %>
      <%= label_tag "No" %>
    </p>
  </div>

  <%= f.submit "Next" %>
<% end %>

<%= @progress %>

<%= link_to 'skip', next_wizard_path %>
