<%= render "progress_bar", progress: @progress %>

<h3>Social Media Information</h3>

<%= form_for @camp_application, url: wizard_path, method: :put do |f| %>
  <%= f.label :social_media_handle, "Please provide us with your social media handle if you have any. Leave it to none otherwise." %>
  <p><%= f.text_field :social_media_handle, autofocus: true %></p>

  <button><%= link_to 'Back', previous_wizard_path %></button>
  <div class="float-right">
    <%= f.submit "Next", class: "btn btn-primary" %>
    <button><%= link_to 'Skip', next_wizard_path %></button>
  </div>
<% end %>
