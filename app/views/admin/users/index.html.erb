<%= link_to 'UserListing', admin_users_path %>
<%= link_to 'Signout', destroy_admin_session_path, method: :delete %>

<h1>User Listing</h1>

<%= form_with method: :get, local: true do |f| %>
  <%= f.text_field :keyword, value: params[:keyword], class:'form-control' %>
  <%= f.submit 'search', class: 'btn btn-primary' %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Contact</th>
    <th>Country</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.contact %></td>
      <td><%= user.country %></td>
      <td><%= link_to 'Show', admin_user_path(user) %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%== pagy_nav(@pagy) %>
