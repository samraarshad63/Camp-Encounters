<h1>Add a new Camp</h1>

<%= render "layouts/error_messages", object: @camp %>

<%= form_with model: @camp, url: admin_camps_path, local: true do |f| %>

  <div class="field">
    <%= f.label :name %>
    <p><%= f.text_field :name, autofocus: true, required: true %></p>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <p><%= f.date_field :start_date, required: true %></p>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <p><%= f.date_field :end_date, required: true %></p>
  </div>

  <p>
    <%= collection_check_boxes(:camp, :location_ids, Location.all, :id, :name) do |b| %>
      <p><%= b.label("data-value": b.value) { b.check_box + " " + b.text } %></p>
    <% end %>
  </p>

  <%= f.submit %>

<% end %>
