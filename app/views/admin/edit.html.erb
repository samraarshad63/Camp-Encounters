<h1>Edit User Profile</h1>

<%= form_with model: @user, local: true do |f| %>

  <div class="field">
    <div><%= f.label :firstname %><div>
    <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
  </div>

  <div class="field">
    <div><%= f.label :lastname %></div>
    <%= f.text_field :lastname, autocomplete: "lastname" %>
  </div>

  <div class="field">
    <div><%= f.label :email %></div>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <div><%= f.label :country %></div>
    <%= f.country_select :country, autocomplete: "country" %>
  </div>

  <div class="field">
    <div><%= f.label :contact %></div>
    <%= f.telephone_field :contact, autofocus: true, required: true, pattern: "[0-9]{3}-[0-9]{2}-[0-9]{3}", placeholder: "123-45-678" %>
  </div>

  <div class="field">
    <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></div>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
